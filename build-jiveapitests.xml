	<path id="JiveAPITestSuite.classpath">
        <pathelement location="bin/jiveapitests.jar"/>
    </path>
	
    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src/main/java">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src/main/resources">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src/main/xsd">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
	
    <target name="clean">
        <delete dir="bin"/>
    </target>
	
	<target depends="init" name="build">
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false" source="${source}" target="${target}">
            <src path="src/main/java/com/actiance/tests/VanAPIJive"/>
			<src path="src/main/java/com/actiance/tests/support/common/db"/>
            <src path="src/main/resources"/>
            <src path="src/main/xsd"/>
            <classpath refid="VantageAutomation.classpath"/>
        </javac>
		<jar destfile="bin/jiveapitests.jar"
             basedir="bin/com/actiance/tests/VanAPIJive"
        />
    </target>
	
    <target depends="build" name="run_jiveapitests">
        <java classname="org.testng.TestNG">
		<arg line="src/main/resources/JiveTestng1.xml"/>
            <classpath refid="VantageAutomation.classpath"/>
			<classpath refid="JiveAPITestSuite.classpath"/>
        </java>
    </target>
  
